{
  "rules": {
    "alex": {
      "allow": []
    },
    "common-misspellings": {
      "ignore": []
    },
    "en-capitalization": true,
    "no-empty-section": true,
    "no-exclamation-question-mark": true,
    "one-sentence-per-line": true,
    "period-in-list-item": true,
    "rousseau": {
      "showLevels": ["suggestion", "warning", "error"],
       ignoreInlineNodeTypes: ["Code", "Html"],
       "ignoreTypes": ["passive"] //covered better by write-good
    },
    "spelling": {
        "language": "en",
        "skipPatterns": ["JavaScript"],
        "wordDefinitionRegexp": "/[\\w']+/g",
        "suggestCorrections": true,
//        "editor.formatOnSave": true //not a real setting?
    },
//    "spellchecker": {
 //     skipWords: ['JavaScript', 'ECMAScript'],
  //    skipRegExps: ['(?:[a-z]+)Script'],
   //  skipNodeTypes: ['Comment'],
    //},
    "terminology": {
      "defaultTerms": true,
      "terms": [
        "PlaceOS"
      ]
    },
    "write-good": true
  }
}