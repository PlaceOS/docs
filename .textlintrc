rules:
  # The `alex` rule flags usage of inconsiderate wording.
  # https://alexjs.com
  alex:
    allow:
    - execute
    - execution
    - special
    - stroke
    - traps
    profanitySureness: 2

  # Corrections for:
  # https://en.wikipedia.org/wiki/Wikipedia:Lists_of_common_misspellings/For_machines
  common-misspellings: true

  # Enforcement of correct usage of capitalization in different contexts.
  en-capitalization:
    allowWords:
    - etcd

  # Checks for headings that have been defined with no content.
  no-empty-section: true

  # Enforces semantic line breaks (https://sembr.org)
  one-sentence-per-line: true

  # Dictionary
  spelling:
    language: en
    skipPatterns:
    # Patterns
    - '/\b[0-9]+\b/'             # numbers
    - '/\b(?:[A-Z]){2,}s?\b/'    # acronyms (with plural)
    - '/\b\S*\.\S{2,4}/'         # filenames
    - '/\b(pre)|(un)-\w/i'       # hyphenated prefixes
    - '/\b\d*(px)|(pt)\b/'       # pt and px measures
    - '/\bbase\d+\b/'            # base2, base16 etc

    # Product Components
    - '/\b[Aa]uth\b/'
    - Backoffice
    - '/\b[Ii]nit\b/'
    - PlaceOS

    # Mixed-case acronyms
    - IdP
    - IoT
    - OAuth
    - PoE
    - SaaS
    - SAML2
    - SNMPv2

    # Jargon
    - '/analytics/i'
    - '/artboards?/i'
    - '/automations/i'
    - '/chatbots?/i'
    - '/frontend/i'
    - '/integrations/i'
    - '/integrators?/i'
    - '/load balancer/i'
    - '/microservices?/i'
    - '/minify/i'
    - '/preconfigure[ds]?/i'
    - '/proxying/i'
    - '/rebalance/i'
    - '/serverless/i'
    - '/subnet/i'
    - '/tokeniz(e|er|ed|ing)/i'
    - '/webhooks?/i'
    - '/websocket/i'

    # Brands
    - AOpen
    - Arial
    - Atlona
    - Auth0
    - B2C
    - BACnet
    - Barco
    - Biamp
    - Chromebase
    - ChromeBox
    - ChromeOS
    - ClearOne
    - ClickShare
    - CloudFormation
    - Cognipoint
    - ControlSpace
    - Denon
    - DynaLite
    - Echo360
    - ElastiCache
    - Elasticsearch
    - etcd
    - Extron
    - Fargate
    - Floorsense
    - Foxtel
    - Gantner Relaxx
    - GSuite
    - Helvar
    - InTouch
    - Kentix
    - Kubernetes
    - Lenel
    - Lightware
    - Lumens
    - Lutron
    - MediaSite
    - Meraki
    - MessageMedia
    - Mimo
    - Modbus
    - Moki
    - Multicast
    - NGINX
    - OpenStack
    - Optica
    - Pexip
    - PJLink
    - PointGrab
    - Polycom
    - PowerSoft
    - Pressac
    - QBic
    - Rackspace
    - RealPresence
    - RethinkDB
    - S3
    - Screen Technics
    - Shure
    - Symmetrix
    - TriplePlay
    - Vergesense
    - Webex
    - Whispir
    - Wolfvision
    - Xovis

  # Enforcement of capitalization, words breaks and other well defined
  # structure.
  terminology:
    defaultTerms: true
    terms:
    - ['adfs', 'AD FS']
    - ['back[- ]?office', 'Backoffice']
    - ['config', 'configuration']
    - ['front[- ]end', 'frontend']
    - ['(google )?gsuite', 'Google Workspace (GSuite)']
    - ['google workplace', 'Google Workspace']
    - ['(cisco )?meraki', "Cisco Meraki"]
    - ['place\W?os', 'PlaceOS']
    - ['place\W?tech(nology)?', 'Place Technology']
    - ['web[ -]?socket', 'WebSocket']
    exclude:
    - 'Node(?:js)?'
    - 'web[- ]?site(s)?'

  write-good: false


# Filters defined here exluded matching content for _all_ of the rules above.
#
# This should be used sparsely and as a last resort. While it may be tempting to
# place terms here, this will result in sentences containing them not being
# checked for complexity.
filters:
  allowlist:
    allow:
    - '/\[(.*\W)?(.+)(\W.*)?\]\(.*\2.*\)/ig'  # link text that is also in url
    - '/\{#\S+\}/g'                           # header link overrides
