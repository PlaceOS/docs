rules:
  alex:
    allow: 
    - execute
    - execution
    - special

  common-misspellings:
    ignore: []

  en-capitalization: true

  no-empty-section: true

  no-exclamation-question-mark: true

  one-sentence-per-line: true

  period-in-list-item: true

  rousseau:
    severity: warning
    showLevels:
    - suggestion
    - warning
    - error
    ignoreInlineNodeTypes:
    - Code
    - Html
    ignoreTypes:
    - passive            # covered by write-good
    - lexical-illusion
    - so
    - adverbs
    - weasel
    - sentence:uppercase # covered by en-capitalization

  spelling:
    language: en
    skipPatterns:
    # capitalization isn't handled well here, 
    # for anything in terminology, add only the corrected version
    # might need the /i on any which are not in terminology?
    # Unrelated: do we add stanard shortenings like auth, docs, init, etc 
    - '/[0-9]+/g'             # numbers 
    - '/\b(?:[A-Z]){2,}\b/g'  # acronyms
    - '/\b\S*\.\S{2,4}/g'     # filenames
    - '/analytics/i'
    - '/automations/i'
    - '/backoffice/i'
    - '/balancer/i'
    - '/integrations/i'
    - '/microservice[s]?/i'
    - '/placeos/i'
    - '/preconfigure[ds]?/i'
    - '/subnet/i'
    - '/tokeniz(er|ed|ing)?/i'
    - AOpen
    - bootstrapper
    - chatbot
    - Chromebase
    - ChromeBox
    - ChromeOS
    - CloudFormation
    - ElastiCache
    - Elasticsearch
    - etcd
    - Fargate
    - frontend
    - Frontends
    - GSuite
    - Kubernetes
    - Meraki
    - Mimo
    - Moki
    - Multicast
    - NGINX
    - Optica
    - pre-
    - RethinkDB
    - SaaS
    - webhook
    



  terminology:
    defaultTerms: true
    terms:
    - ['back\W?office', 'Backoffice']
    - ['ETCD', 'etcd']
    - ['front[- ]end', frontend]
    - ['frontends', 'Frontends'] # the application, can conflict with "frontend" as a term?
    - ['place\W?os', 'PlaceOS']
    - ['place\W?tech(nology)?', 'Place Technology']
    - ['place\W?analytics', PlaceAnalytics]
    - ['saas', SaaS]
    - "CloudFormation"
    - "ElastiCache"
    - "Elasticsearch"
    - "GSuite"
    - "Kubernetes"
    - "Meraki"
    - "NGINX"
    - "RethinkDB"

  write-good:
    severity: warning


filters:
  allowlist:
    allow:
    - '/<i>.*<\/i>/g'                         # idiomatic terms
    - '/\[(.*\W)?(.+)(\W.*)?\]\(.*\2.*\)/ig'  #link text that is also in url
    # getting around write-good's soft checks
    - '/requirement[s]?/i'