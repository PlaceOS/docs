rules:
  alex:
    allow:
    - execute
    - execution
    - special
    - stroke
    - traps
    profanitySureness: 2

  common-misspellings:
    ignore: []

  en-capitalization:
    allowWords:
    - etcd

  no-empty-section: true

  one-sentence-per-line: true

  spelling:
    language: en
    skipPatterns:
    # for anything in terminology, add only the corrected version
    # hyphenated prefixes are considered separate words
    - '/[0-9]+/g'              # numbers
    - '/\b(?:[A-Z]){2,}s?\b/g' # acronyms (with plural)
    - '/\b\S*\.\S{2,4}/g'      # filenames
    - '/analytics/i'
    - '/artboard[s]?/i'
    - '/automations/i'
    - '/(re)?balance(r)?/i'
    - '/integrat(ion|or)[s]?/i'
    - '/microservice[s]?/i'
    - '/pre-/i'
    - '/preconfigure[ds]?/i'
    - '/serverless/i'
    - '/subnet/i'
    - '/tokeniz(er|ed|ing)?/i'
    - '/un-/i'
    - '/webhook[s]?/i'
    - Arial
    - AOpen
    - Atlona
    - Auth
    - Auth0
    - B2C
    - Backoffice
    - BACnet
    - Barco
    - Biamp
    - chatbot
    - Chromebase
    - ChromeBox
    - ChromeOS
    - ClearOne
    - ClickShare
    - CloudFormation
    - Cognipoint
    - ControlSpace
    - Denon
    - DynaLite
    - Echo360
    - ElastiCache
    - Elasticsearch
    - etcd
    - Extron
    - Fargate
    - Floorsense
    - Foxtel
    - frontend
    - Frontends
    - Gantner Relaxx
    - Gmail
    - GSuite
    - Helvar
    - init
    - IoT
    - Kentix
    - Kubernetes
    - Lenel
    - Lightware
    - Lumens
    - Lutron
    - MediaSite
    - Meraki
    - MessageMedia
    - Mimo
    - Modbus
    - Moki
    - Multicast
    - NGINX
    - OpenStack
    - Optica
    - Pexip
    - PJLink
    - PlaceOS
    - PoE
    - PointGrab
    - Polycom
    - PowerSoft
    - Pressac
    - proxying
    - px
    - QBic
    - Rackspace
    - RealPresence
    - RethinkDB
    - SaaS
    - Screen Technics
    - Shure
    - Symmetrix
    - TriplePlay
    - Vergesense
    - Webex
    - webhook
    - WebSocket
    - Whispir
    - Wolfvision
    - Xovis

  terminology:
    defaultTerms: true
    terms:
    - ['adfs', 'AD FS']
    - ['back[- ]?office', 'Backoffice']
    - ['config', 'configuration']
    - ['ETCD', 'etcd']
    - ['front[- ]end', 'frontend']
    - ['frontends', 'Frontends'] # the application, can conflict with "frontend" as a term?
    - ['(google )?gsuite', 'Google Workspace (GSuite)']
    - ['google workplace', 'Google Workspace']
    - ['(cisco )?meraki', "Cisco Meraki"]
    - ['place\W?os', 'PlaceOS']
    - ['place\W?tech(nology)?', 'Place Technology']
    - ['place\W?analytics', PlaceAnalytics]
    - ['saas', SaaS]
    - ['web[ -]?socket', 'WebSocket']
    - "Auth" # the service, otherwise spell out authorization/authentication (not handled)
    - "Auth0"
    - "AWS CloudFormation"
    - "AWS ElastiCache"
    - "Cisco Meraki"
    - "Elasticsearch"
    - "init" # the service, otherwise spell out "initialize" etc (not handled)
    - "Kubernetes"
    - "NGINX"
    - "px"
    - "RethinkDB"
    exclude:
    - 'Node(?:js)?'
    - 'web[- ]?site(s)?'

  write-good:
    severity: warning

filters:
  allowlist:
    allow:
    - '/<i>.*<\/i>/g'                         # idiomatic terms
    - '/\[(.*\W)?(.+)(\W.*)?\]\(.*\2.*\)/ig'  # link text that is also in url
    - '/\{#\S+\}/g'                           # header link overrides
