rules:
  alex:
    allow: []

  common-misspellings:
    ignore: []

  en-capitalization: true

  no-empty-section: true

  no-exclamation-question-mark: true

  one-sentence-per-line: true

  period-in-list-item: true

  rousseau:
    severity: warning
    showLevels:
    - suggestion
    - warning
    - error
    ignoreInlineNodeTypes:
    - Code
    - Html
    ignoreTypes:
    - passive            # covered by write-good
    - lexical-illusion
    - so
    - adverbs
    - weasel
    - sentence:uppercase # covered by en-capitalization

  spelling:
    language: en
    skipPatterns:
    - '/placeos/i'
    - '/backoffice/i'
    - '/[A-Z]{2,}/'      # acronyms
    - '/[0-9]+/g'             # numbers 
    - auth
    - Auth0
    - chatbot
    - webhook

  terminology:
    defaultTerms: true
    terms:
    - ['adfs', 'AD FS']
    - ['place\W?os', 'PlaceOS']
    - ['place\W?tech(nology)?', 'Place Technology']
    - ['back\W?office', 'Backoffice']
    - ['google workplace', 'Google Workspace']
    - Auth0

  write-good:
    severity: warning


filters:
  allowlist:
    allow:
    - '/<i>.*<\/i>/g'    # idiomatic terms
    - '/\[(.*\W)?(\w+)(\W.{4,})?\]\(.*\2.*\)/i'  # link text in link
