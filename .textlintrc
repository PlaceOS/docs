{
  "rules": {
    "alex": {
      "allow": []
    },
    "common-misspellings": {
      "ignore": []
    },
    "en-capitalization": true,
    "no-empty-section": true,
    "no-exclamation-question-mark": true,
    "one-sentence-per-line": true,
    "period-in-list-item": true,
    "rousseau": {
      "showLevels": ["suggestion", "warning", "error"],
      "ignoreTypes": ["passive"] // covered by write-good
    },
    "spelling": {
      "language": "en",
      "skipPatterns": [
        "PlaceOS",
        "/\\b(?:[A-Z]){2,}\\b/g", // acronyms
        "chatbot",
        "webhook",
        "backoffice"
      ],
    },
    "terminology": {
      "defaultTerms": true,
      "terms": [
        "PlaceOS",
        "Place Technology"
      ]
    },
    "write-good": true
  }
}
