rules:
  alex:
    allow: []

  common-misspellings:
    ignore: []

  en-capitalization: true

  no-empty-section: true

  no-exclamation-question-mark: true

  one-sentence-per-line: true

  period-in-list-item: true

  rousseau:
    severity: warning
    showLevels:
    - suggestion
    - warning
    - error
    ignoreInlineNodeTypes:
    - Code
    - Html
    ignoreTypes:
    - passive            # covered by write-good
    - lexical-illusion
    - so
    - adverbs
    - weasel
    - sentence:uppercase # covered by en-capitalization

  spelling:
    language: en
    skipPatterns:
    - '/placeos/i'
    - '/backoffice/i'
    - '/[A-Z]{2,}/'      # acronyms
    - '/webhook[s]?/i'
    - Atlona
    - B2C
    - Barco
    - Biamp
    - chatbot
    - ClearOne
    - ClickShare
    - Cognipoint
    - ControlSpace
    - Denon
    - DynaLite
    - Echo360
    - Extron
    - Floorsense
    - Foxtel
    - Gantner Relaxx
    - Gmail
    - Helvar
    - IoT
    - Kentix
    - Lenel
    - Lightware
    - Lumens
    - Lutron
    - MediaSite
    - Meraki
    - MessageMedia
    - Modbus
    - Pexip
    - PointGrab
    - Polycom
    - PowerSoft
    - Pressac
    - RealPresence
    - Screen Technics
    - Shure
    - Symmetrix
    - TriplePlay
    - Vergesense
    - Webex
    - Wolfvision

  terminology:
    defaultTerms: true
    terms:
    - ['place\W?os', 'PlaceOS']
    - ['place\W?tech(nology)?', 'Place Technology']
    - ['back\W?office', 'Backoffice']

  write-good:
    severity: warning


filters:
  allowlist:
    allow:
    - '/<i>.*<\/i>/g'    # idiomatic terms
    - '/\[(.*\W)?(\w+)(\W.{4,})?\]\(.*\2.*\)/i'  # link text in link
